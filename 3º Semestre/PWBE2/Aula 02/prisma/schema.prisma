generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}

model Turmas {
  id         Int     @id @default(autoincrement())
  nome       String
  quantidade Int
  alunos     Aluno[]
}

model Aluno {
  id        Int    @id @default(autoincrement())
  nome      String
  matricula String
  turmasId   Int
  turmas    Turmas @relation(fields: [turmasId], references: [id])
}